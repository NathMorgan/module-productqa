{
    "name": "bright/module-productqa",
    "description": "Magento 2 Product Q&A module",
    "type": "magento2-module",
    "config": {
        "sort-packages": true
    },
    "authors": [{
        "name": "Nathan Morgan",
        "email": "nathan.morgan@tuqiri.net"
    }],
    "version": "1.0.2",
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Bright\\ProductQA\\": ""
        }
    },
    "require-dev": {
        "magento/magento-coding-standard": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/)"
        ],
        "post-update-cmd": [
            "([ $COMPOSER_DEV_MODE -eq 0 ] || vendor/bin/phpcs --config-set installed_paths ../../magento/magento-coding-standard/)"
        ]
    }
},

